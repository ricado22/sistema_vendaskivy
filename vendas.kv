#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
    background_normal: ''
    background_color: hex('#393939')

<Btn_verde@Button>:
    background_normal: ''  
    background_color: hex('#009900')

<Btn_vermelho@Button>:
    background_normal: ''  
    background_color: hex('#FF0000')

<Label_azul@Label>:
    canvas.before:
		Color:
			rgba: hex('#3399FF')
		Rectangle:
			size: self.size
			pos: self.pos

<Label_roxo@Label>:
    canvas.before:
        Color:
            rgba: hex('#800000')
        Rectangle:
            size: self.size
            pos: self.pos
<Label_yellow@Label>:
    canvas.before:
        Color:
            rgba: hex('#DAA520')
        Rectangle:
            size: self.size
            pos: self.pos

<SelectableBoxLayout>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: hex('#C9F3EF') if self.selected else hex('#F0F0F0')
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
    	id: _has_cod
    	size_hint_x: .1
    	color: (0,0,0,1)
    Label:
    	id: _artigo_produto
    	size_hint_x: .5
    	color: (0,0,0,1)
    Label:
    	id: _quantidade
    	size_hint_x: .1
    	color: (0,0,0,1)
    Label:
    	id: _preco_por_produto
    	size_hint_x: .15
    	color: (0,0,0,1)
    Label:
    	id: _preco
    	size_hint_x: .15
    	color: (0,0,0,1)
<RV>:
    viewclass: 'SelectableBoxLayout'
    SelectableRecycleBoxLayout:
        default_size: None, dp(36)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False

<SelectableBoxLayout_Popup>:
    canvas.before:
        Color:
            rgba: hex('#C9F3EF') if self.selected else hex('#F0F0F0')
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
    	id: _codigo
    	size_hint_x: 0.1
    	color: (0,0,0,1)
    Label:
    	id: _artigo_produto
    	size_hint_x: .5
    	color: (0,0,0,1)
    Label:
    	id: _quantidade
    	size_hint_x: .1
    	color: (0,0,0,1)
    Label:
    	id: _preco
    	size_hint_x: .1
    	color: (0,0,0,1)

<Produto_Nome_Popup>:
    size_hint: .90,.90
    title: 'Nome Produto'
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: .90
            orientation:'vertical'

            BoxLayout:
                size_hint_y: .1
                Label_azul:
                    text: 'Cod'
                    size_hint_x: .4
                Label_azul:
                    text: 'Nome'
                    size_hint_x: .25
                Label_azul:
                    text: 'Quantidade'
                    size_hint_x: .5
                Label_azul:
                    text: 'Preco'
                    size_hint_x: .28
            RV:
                viewclass: 'SelectableBoxLayout_Popup'
                id: rvs
        BoxLayout:
            size_hint_y: .2
            Btn_verde:
                text: 'Selecionar'
                on_release: root.selecionar_art_produto()
            
            Btn_vermelho:
                text: 'Sair'
                on_release: root.dismiss()
        Label:
            size_hint_y: .04
            text: 'Seja Bem Vindo / Curso De Kivy'

<Trocar_Qtde_Popup>:
    size_hint: .5,.5
    title: 'Trocar Quantidade'
	auto_dismiss: False
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            BoxLayout:
				orientation:'vertical'
                Label_azul:
                    id: nova_qtide_1

                Label_azul:
                    id: nova_qtide_2
				
				Label_azul:
                    id: notificacao_nao_valida
				TextInput:
					id: nova_qtide_texto
					multiline: False
					hint_text: 'Nova Quantidade'
				
				Btn_verde:
                	id: nova_qtide_botao
					text: 'Cadastrar'
					on_release: root.validar_text_input(root.ids.nova_qtide_texto.text)
            
            	Btn_vermelho:
                	text: 'Cancelar'
                	on_release: root.dismiss()
        Label:
            size_hint_y: .04
            text: 'Seja Bem Vindo / Curso De Kivy'

<PagarPopup>:
	size_hint: .4, .5
	title: 'Formulario De Pagamento'
	BoxLayout:
		orientation:'vertical'
		spacing: .5
		padding: .5
		BoxLayout:
			size_hint_y: .25
			Label:
				size_hint_x: .5
				text: 'Total a Pagar'
			Label:
				id: total
				size_hint_x: .5
		BoxLayout:
			size_hint_y: .25
			Label:
				size_hint_x: .5
				text:'Valor'
			BoxLayout:
				size_hint_x: .5
				orientation: 'vertical'
				TextInput:
					id: recebido
					hint_text: 'Valor Pago'
					multiline: False
					on_text_validate: root.mostrar_troca()
				Btn_verde:
					text: 'Efetuar'
					on_release: root.mostrar_troca()
		BoxLayout:
			size_hint_y: .25
			Label:
				size_hint_x: .5
				text: 'Troco: '
			Label:
				id: troco
				size_hint_x: .5
		BoxLayout:
			size_hint_y: .25
			Btn_verde:
				id: botao_pagar
				disabled: True
				text: 'Efetuar Pagamento'
				on_release: root.terminar_pagamento()
			Btn_vermelho:
				text: 'Cancelar'
				on_release: root.dismiss()

<VendasJanela>:
	canvas.before:
		Color:
			rgba: hex('#BA55D3')
		Rectangle:
			size: self.size
			pos: self.pos
	orientation: 'vertical'
	BoxLayout:
		size_hint_y: .1
		spacing: .5
